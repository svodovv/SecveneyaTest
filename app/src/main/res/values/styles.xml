<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="TextViewBodyLarge" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewBodyMedium" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="TextViewBodySmall" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextViewHeaderSmall">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="TextViewHeaderMedium">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewTitleMedium">
        <item name="fontFamily">@font/robot_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextViewTitleSmall">
        <item name="fontFamily">@font/robot_medium</item>
        <item name="android:textSize">240sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
</resources>